<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_base_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

	<LinearLayout 
	    android:id="@+id/detail_base_scroll_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:orientation="vertical"
	    android:layout_weight="10">
		<ScrollView 
		    android:id="@+id/detail_scroll_layout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >
		
		    <LinearLayout
		        android:id="@+id/detail_main_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		
			    <TextView
			        android:id="@+id/title"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:ems="10"
			        android:textSize="35sp" />
			
			    <TextView
			        android:id="@+id/version"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:textStyle="bold"
			        android:paddingTop="5sp" />
			    
				<TextView
			        android:id="@+id/description_head"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:textSize="15sp"
			        android:textStyle="bold|italic"
			        android:paddingLeft="5sp"
			        android:paddingTop="10sp"
			        android:paddingBottom="5sp"
			        android:text="@string/description_head_text" />
				
			    <TextView
			        android:id="@+id/description"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:textSize="15sp"
			        android:textStyle="bold"
			        android:paddingLeft="5sp"
			        android:paddingTop="10sp"
			        android:paddingBottom="10sp" />
				
		    </LinearLayout>
		    
		</ScrollView>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/detail_button_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:orientation="vertical"
	    android:layout_weight="1">
	    
	</LinearLayout>
</LinearLayout>