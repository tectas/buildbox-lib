<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.tectas.buildbox"
    android:versionCode="4"
    android:versionName="0.7" >

    <uses-permission android:name="android.permission.INTERNET" />
    
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/buildbox"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="at.tectas.buildbox.BuildBoxMainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="sensorPortait">
            <intent-filter>
            	<action android:name="android.intent.action.MAIN" />
            	<category android:name="android.intent.category.LAUNCHER" />
        	</intent-filter>
        </activity>
        <activity android:name="at.tectas.buildbox.BuildBoxPreferenceActivity" />
        <service android:name="at.tectas.buildbox.service.DownloadService"
            android:label="BuildBox Download Service">
        </service>
        <receiver
            android:name="at.tectas.buildbox.UpdateReceiver" >
            <intent-filter>
            	<action android:name="android.intent.action.BOOT_COMPLETED" />
        	</intent-filter>
        </receiver>
    </application>

</manifest>